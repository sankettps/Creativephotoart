<style>
  #apiList th {
    padding: 7px 15px;
    text-align: left;
    border: 1px solid #000;
    background-color: #FF9800;
    color: #fff;
    font-size: 16px;
  }
  #apiList td {
    background: none repeat-x scroll center left;
    color: #000;
    padding: 7px 15px;
    font-family: Verdana;
    border: 1px solid #000;
  }
  #apiList tr.odd td {
    background: #e8e8ec repeat-x scroll center left;
    cursor: pointer;
  }
  #apiList td#get {
    background-color: #4DAB58;
  }
  #apiList td#post {
    background-color: #CC9900;
  }
  #apiList td#put {
    background-color: #3366FF;
  }
  #apiList td#delete {
    background-color: #CC3300;
  }
</style>
<script type="text/javascript">
  $(document).ready(function () { $("#apiList > tbody > tr:odd").addClass("odd"); $("#apiList > tbody > tr:not(.odd)").hide(); $("#apiList > tbody > tr:first-child").show(); $("#apiList tr.odd").click(function () { var display= $(this).next("tr").css('display'); $("#apiList > tbody > tr:not(.odd)").hide(); $("#apiList > tbody > tr:first-child").show(); if (display == "none") { $(this).next("tr").css('display', 'table-row'); $(this).find(".arrow").toggleClass("up"); } else { $(this).next("tr").css('display', 'none'); $(this).find(".arrow").toggleClass("up"); } }); });
</script>
<div class="row">
  <div class="col-md-12">
    <div class="panel themecolor">
      <div class="panel-heading" style="background-color: #616161; color: white; font-weight: bold;">
        <h3>
API HELP
</h3>
      </div>
      <div class="panel-body" style="padding: 15px;">
        <div class="row ">
          <div class="col-md-12">
            <% @host = root_url %>
            <table id="apiList" style="width: 100%%;">
              <tr style="border-radius: 5px;">
                <th style="width: 1%;">No</th>
                <th style="width: 5%;">Method</th>
                <th style="width: 70%;">URL</th>
              </tr>
              <tr>
                <td>1</td>
                <td id="post">POST</td>
                <td><%= @host %>app_devices</td>
              </tr>
              <tr>
                <td colspan="3">
                  <h5>Description :</h5>
                  <p>Make entry in which device which app installs</p>
                  <h5>Friendly Url :</h5>
                  <p><%= @host %>app_devices</p>
                  <h5>Parameters :</h5>
                  <table>
                    <tr>
                      <td>Parameter Name</td>
                      <td>DataType</td>
                      <td>Description</td>
                    </tr>
                    <tr></tr>
                    <tr>
                      <td>app_name</td>
                      <td>string</td>
                      <td>appplication name (e.g 3d Photo Frames)</td>
                    </tr>
                    <tr></tr>
                    <tr>
                      <td>device_token</td>
                      <td>string</td>
                      <td>Token of device</td>
                    </tr>
                    <tr></tr>
                  </table>
                </td>
              </tr>

              <tr>
                <td>2</td>
                <td id="get">GET</td>
                <td><%= @host %>apps/app_frames.json?app_name=APP_NAME</td>
              </tr>
              <tr>
                <td colspan="3">
                  <h5>Description :</h5>
                  <p>get all frames of an app</p>
                  <h5>Friendly Url :</h5>
                  <p><%= @host %>"app_frames.json?app_name=APP_NAME"</p>
                </td>
              </tr>

              <tr>
                <td>3</td>
                <td id="get">GET</td>
                <td><%= @host %>apps/app_add_ids.json?app_name=APP_NAME</td>
              </tr>
              <tr>
                <td colspan="3">
                  <h5>Description :</h5>
                  <p>get all add ids of an app</p>
                  <h5>Friendly Url :</h5>
                  <p><%= @host %>"app_add_ids.json?app_name=APP_NAME"</p>
                </td>
              </tr>

            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>